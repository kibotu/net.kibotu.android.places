<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:textColor">@color/text_color</item>-->
        <!--<item name="android:editTextColor">@color/edit_text_olor</item>-->
        <!--<item name="android:textColorPrimary">@color/text_color_primary</item>-->
        <!--<item name="android:textColorSecondary">@color/text_color_secondary</item>-->
        <!--<item name="android:textColorTertiary">@color/text_color_tertiary</item>-->
        <!--<item name="android:textColorPrimaryInverse">@color/text_color_primary_inverse</item>-->
        <!--<item name="android:textColorSecondaryInverse">@color/text_color_secondary_inverse</item>-->
        <!--<item name="android:textColorTertiaryInverse">@color/text_color_tertiary_inverse</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="news_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/space_3</item>
        <item name="android:layout_marginRight">@dimen/space_3</item>
        <item name="android:layout_marginTop">@dimen/space_5</item>
        <item name="android:layout_marginBottom">@dimen/space_5</item>
    </style>

    <!-- collapse layout -->

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ExpandedAppBarPlus1" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">28.5sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapsedAppBarPlus1" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24.5sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- end collapse layout -->

</resources>
